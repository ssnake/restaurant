<h1>Наше меню по категориям: <%= @product_type.title %></h1> - для юзеров

<br/>

<% if current_user %>
  Группы наших заказчиков: <br/>
  <%= render partial: 'groups/group_list', collection: @all_groups, as: 'group' %> | 
  <%= link_to fa_icon(' plus-square') + 'Создать группу', new_group_path %>
<% end %>

<hr/>

<%= link_to 'Все меню |', store_index_path %>

<!-- рендерим партиал с типом меню + ссылку для добавления еще одного типа меню -->
<%= render partial: 'store/store_product_type', collection: @product_types, as: 'product_type' %>

<hr/>

<div id="products_table">
  <table class="table table-border table-hover">
    <thead>
      <tr>
        <th>Блюдо</th>
        <th>Описание</th>
        <th>Стоимость, грн</th>
        <th></th>
      </tr>
    </thead>
      
    <!-- рендерим через партиал список меню данного типа -->
    <%= render partial: 'store/product_table', collection: @products_by_product_type %>
       
    </table>
  </div>

