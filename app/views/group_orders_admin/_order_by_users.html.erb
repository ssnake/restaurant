<thead>
  <th colspan="4">Заказчик: <%= user.name %>, <%= user.email %></th>
</thead>
<% price = 0 %>
<% user.group_line_items.where(group_order_id: @group_order.id).each do |item| %>
  <tr>
    <td><%= item.product.title %></td>
    <td><%= item.product.description %></td>
    <td><%= my_number_to_currency(item.product.price) %> x <%= item.quantity %> шт</td>
    <td><%= my_number_to_currency(item.product.price * item.quantity) %></td>
  </tr>
  <% price += (item.product.price * item.quantity) %>
<% end %>
<tr>
  <th colspan="3">Сумма с посетителя:</th>
  <th><%= my_number_to_currency(price) %></th>
</tr>
